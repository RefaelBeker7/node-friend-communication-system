doctype html
html(lang='en')
  head
    title FriendsSystem
    link(rel='stylesheet', href='/styles/bootstrap-style.css')
    link(rel='stylesheet', href='/styles/ul-style.css')
  body
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-
          toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
      a.navbar-brand(href='/') NodeProject
      .navbar-collapse.collapse 
         ul.nav.navbar-nav
           if user
             li(class=(title == 'Welcome' ? 'active' : ''))
               a(href='/') Welcome
           if user
             li(class=(title == 'About' ? 'active' : ''))
               a(href='/about') About
           if user
             li(class=(title == 'Members' ? 'active' : ''))
               a(href='/members') Members
           if !user
             li(class=(title == 'Register' ? 'active' : ''))
               a(href='/users/register') Register
             li(class=(title == 'Login' ? 'active' : ''))
               a(href='/users/login') Login
         ul.nav.navbar-nav.navbar-right
           if user
             li
               a(href='/users/logout') Logout
             li
               img(src='./uploads/#{user.profileimage}', alt='#{user.name}', width="50" height="50")
  .container
   != messages()
   block content
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/scripts/bootstrap-script.js')
  script(src='/scripts/script-admin.js')
